[user]
	name = Giovanni Collazo
	email = hello@gcollazo.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHEGF4BrP2CfWXh15ovNz/TyAOQNPGDpdICNarfvPo37

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true

[core]
  quotepath = false
  autocrlf = input

[color]
  interactive = true
  status = true
  branch = true
  diff = true
  ui = true

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[alias]
  a = add
  b = branch
  c = commit
  d = diff
  f = fetch
  g = grep
  l = log
  m = merge
  co = checkout
  p = pull
  s = status
  w = whatchanged

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[credential "https://git.heroku.com"]
	provider = generic

[credential]
	helper =
	helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
	useHttpPath = true
